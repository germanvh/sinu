@model SINU.Models.vInscripcionDetalle

<!-- xxxxxxxxxxxx Debo indicar el TITLE de la pantalla y el MENUPERFIL correspondiente en todas las pantallas (COPIAR ESTE BLOQUE) xxxxxxxxxxxxxx -->
@{
    ViewBag.Title = "DETALLE INSCRIPTO";
}
@*@section MenuPerfil{

        @Html.Partial("_MenuPerfilDeleg")
    }*@
<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx  -->


<h2>Detalles Inscripción seleccionada de  @ViewBag.Delegacion</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        @*<h4>@Model.IdInscripcion</h4>*@
        <hr />


        @Html.HiddenFor(m => m.IdPersona)
        @Html.HiddenFor(m => m.IdInscripcion)
        <div class="list-group">
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.Apellido)</b>:    @Html.DisplayFor(model => model.Apellido)
            </div>

            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.Nombres)</b>:    @Html.DisplayFor(model => model.Nombres)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.DNI)</b>:    @Html.DisplayFor(model => model.DNI)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.Genero)</b>:    @Html.DisplayFor(model => model.Genero)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.Telefono)</b>:    @Html.DisplayFor(model => model.Telefono)
            </div>
            <div class="list-group-item">

                <b>@Html.DisplayNameFor(model => model.Celular)</b>:    @Html.Label(Model.Celular ?? "  -- ")
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.ComoSeEntero)</b>:    @Html.DisplayFor(model => model.ComoSeEntero)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.Preferencia)</b>:    @Html.DisplayFor(model => model.Preferencia)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.FechaRegistro)</b>:    @Html.DisplayFor(model => model.FechaRegistro)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(model => model.Inscripto_En)</b>:    @Html.DisplayFor(model => model.Inscripto_En)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(Model => Model.IdInscripcion)</b>:   @Html.DisplayFor(Model => Model.IdInscripcion)
            </div>
            <div class="list-group-item">
                <b>@Html.DisplayNameFor(Model => Model.FechaEntrevista)</b>:  @Html.DisplayFor(Model => Model.FechaEntrevista)
            </div>

        </div>
    </div>
    <br />
    <div class="container-fluid">
        <div class="form-group row">
            <div class="col-sm-4 col-lg-2">
                @Html.ActionLink("Vista Anterior", "Index", null, new { @class = "btn btn-dark btn-lg w-100 float-right" })
            </div>
            <div class="col-sm-3 col-lg-2" id="Ocul1" hidden data-toggle="modal" data-target="#modal1">
             <button type="button" class="btn btn-success btn-lg w-100 float-right">Postular</button>
            </div>
            <div class="col-sm-3 col-lg-2" id="Ocul2" hidden data-toggle="modal" data-target="#modal2">
                <button type="button" class="btn btn-success btn-lg w-100 float-right">No Postular</button>
            </div>
            <div class="col-sm-3 col-lg-2" id="Ocul3" hidden data-toggle="modal" data-target="#modal3">
             <button type="button" class="btn btn-success btn-lg w-100 float-right">Volver</button>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">SINU</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Esta Seguro que desea realizar la accion sobre el postulante<br />
                    @Model.Apellido @Model.Nombres
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" value="Postular" name="botonPostular">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">SINU</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Esta Seguro que desea realizar la accion sobre el postulante<br />
                    @Model.Apellido @Model.Nombres
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" value="No Postular" name="botonPostular">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">SINU</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Esta Seguro que desea realizar la accion sobre el postulante<br />
                    @Model.Apellido @Model.Nombres
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" value="Volver" name="botonPostular">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script type="text/javascript">
       $(document).ready(function () {
           var a = '@ViewBag.Estado'
           if (a != "No Postulado") {
               $("#Ocul1").removeAttr("hidden");
               $("#Ocul2").removeAttr("hidden");
           }
            else {
               $("#Ocul3").removeAttr("hidden");
           };
       });
        
    </script>
}