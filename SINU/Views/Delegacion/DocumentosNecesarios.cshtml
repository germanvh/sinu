@model SINU.ViewModels.DocuNecesaria

<h2>Listado de Documentacion Necesaria</h2>
@using (Html.BeginForm("DocumentosNecesarios", "Delegacion"))
{
    <table data-CUD="DataProblema" data-URL="ListaProblema" data-ELI="EliminaIDIO" data-Controller="Delegacion" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentosNecesarios[0].Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentosNecesarios[0].Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentosNecesarios[0].Presentado)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DocumentosNecesarios)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td class="text-center">
                        @{if (item.Presentado == false)
                            {
                                <input type="checkbox" value="@item.Tipo" name="select" />
                            }
                            else
                            {
                                <b class="fa fa-check-circle" style="color:green"></b>
                            }

                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container-fluid">
        <div class="form-group row">
            <div class="align-content-lg-end">
                <button type="submit" class="btn btn-primary" value="@Model.DocumentosNecesarios[0].IdInscripcion" name="IdInscripto">Confirmar</button>
            </div>
        </div>
    </div>
}