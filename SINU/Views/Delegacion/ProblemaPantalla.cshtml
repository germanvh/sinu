@model SINU.ViewModels.ProblemaPantallaVM

@*@{
        ViewBag.Title = "ProblemaPantalla";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@

<h2>ProblemaPantalla</h2>

<table id="TablaProblema" data-CUD="DataProblema" data-URL="ListaProblema" data-ELI="EliminaIDIO" data-Controller="Delegacion" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
    @*<table id="example" class="display" cellspacing="0" width="100%">*@
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListDataProblemaPantallaVM[0].Comentario)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.ListDataProblemaPantallaVM[0].Persona.Apellido)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.ListDataProblemaPantallaVM[0].VerificacionPantallas.Pantalla)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.ListDataProblemaPantallaVM[0].Postulante.IdPersona)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody >


        @foreach (var item in Model.ListDataProblemaPantallaVM)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentario)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Persona.Apellido)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.VerificacionPantallas.Pantalla)
                </td >
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Postulante.IdPersona)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdDataProblema })
                </td>
            </tr>
        }
    </tbody>


</table>
<br>

@using (Ajax.BeginForm("ProblemaPantalla", "Delegacion", null,
    new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "Exito(data,status,xhr)",
        OnFailure = "Falla",
        LoadingElementId = "carga",
//LoadingElementDuration = 1000,
//UpdateTargetId = "resultTarget"
},
    new { id = "BeginFormProblemaPantalla" }))
{
    @Html.AntiForgeryToken()
    //@Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group BTMuestraTable">
        <div class="form-group row ">

            @Html.HiddenFor(model=>model.DataProblemaPantallaVM.IdPantalla)
            @Html.HiddenFor(model=>model.DataProblemaPantallaVM.IdPostulantePersona)
            
            <div class="form-group col-12">
                @Html.LabelFor(model => model.DataProblemaPantallaVM.Comentario, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DataProblemaPantallaVM.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataProblemaPantallaVM.Comentario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group pl-4">
                <input type="submit" value="agregar comentario" class="btn btn-success" />
            </div>
        </div>
    </div>

}
