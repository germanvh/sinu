@model SINU.ViewModels.IDPersonaVM
@{
    Layout = null;
}

<!DOCTYPE html>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>ListaProblema</title>
        <table>
            <thead>
                @*<th class="secondary">
