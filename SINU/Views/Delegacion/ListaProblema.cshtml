@model SINU.ViewModels.IDPersonaVM
@{
    Layout = null;
}

<!DOCTYPE html>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

  
       
    <body>
        <div class="container-sm">
            <div class="col-md-6">
                <title>ListaProblema</title>
                <table id="TListadoProblema" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th class="secondary" hidden>
                                @Html.DisplayNameFor(model => model.DataVerificacionVM[0].IdDataVerificacion)
                            </th>
                            <th class="secondary">
                                @Html.DisplayNameFor(model => model.DataVerificacionVM[0].Descripcion)
                            </th>
                            <th>
                                Opciones
                            </th>
                        </tr>
                    </thead>
                    <tbody class="position-static">
                        @foreach (var item in Model.DataVerificacionVM)
                        {
                            <tr>
                                <td hidden>
                                    @Html.HiddenFor(modelitem => item.IdDataVerificacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Descripcion)
                                </td>
                                <td class="align-content-md-center">
                                    &ensp;
                                    @Html.ActionLink("Problema", "DataProblema", new { id = item.IdDataVerificacion, id_per = Model.ID_PER }, new { @class = "btn btn-dark w-100" })
                                    &ensp;
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
        
    </body>

}
