@model SINU.ViewModels.GrupoCarrOficiosvm

@{
    ViewBag.Title = "Grupo Carrera/Oficio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    @*<h4>GrupoCarrOficio</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Personal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Personal)
        </dd>
    </dl>

    @*aca tiene que ir una tabla*@

    <table class="table table-filters table-bordered table-light" id="le-filters" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Carreras)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Personal)
                </th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Carreras)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarreraUoficio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Personal)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdGrupoCarrOficio }) |
    @Html.ActionLink("Volver", "Index")
</p>

