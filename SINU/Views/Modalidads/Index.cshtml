@model IEnumerable<SINU.Models.Modalidad>

@{
    ViewBag.Title = "Modalidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @*<p>
        @Html.ActionLink("Nuevo Registro", "Create")
    </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personal)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personal)
                </td>
                <td>
                    @Html.ActionLink("  ", "Edit", new { id = item.IdModalidad }, htmlAttributes: new { @class = "fas fa-edit" })&ensp;|&ensp;
                    @Html.ActionLink("  ", "Details", new { id = item.IdModalidad }, htmlAttributes: new { @class = "fas fa-list" })&ensp;|&ensp;
                    @Html.ActionLink("  ", "Delete", new { id = item.IdModalidad }, htmlAttributes: new { @class = "fas fa-trash-alt" })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Nuevo Registro", "Create", null, new { @class = "btn btn-success btn-lg fas fa-plus font-jumb", @style = "height:auto" })
    </p>
</body>
</html>
