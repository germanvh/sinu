@model SINU.ViewModels.DocuAnexoVM


@using (Ajax.BeginForm("DocumentacionAnexo", "Postulante", null,
    new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "Exito(data,status,xhr)",
        OnFailure = "Falla",
        LoadingElementId = "carga",
//LoadingElementDuration = 1000,
//UpdateTargetId = "resultTarget"
},
    new { id = "BeginDocumentacionAnexo", enctype = "multipart/form-data" }))
{
    <h2>Documentacion  Extra</h2>
    <h4>Estos Documentos debera presentarlos personalmente en la Delegacion Correspondiente</h4>
    <div class="form-group">
        <div class="jumbotron mb-0 p-3 pt-4 " style="background-color: #08495f; color:white">
            @foreach (var item in Model.docus)
            {
            <div class="row" style="border-bottom:1px solid white">
                <div class=" col col-sm-8">
                    <h5><b>@Html.Label(item.Tipo):</b></h5><h6> @item.Descripcion</h6>
                </div>
                @if (ViewBag.secucu==14)
                {
                    <div class="col col-sm-2 ">
                        @if ((bool)item.Presentado)
                        {
                            <b style="color:green; ">Entregado</b>
                        }
                        else
                        {
                            <b style="color:red">No Entregado</b>
                        }
                    </div>
                }

            </div>

            }

        </div>


    </div>


}
