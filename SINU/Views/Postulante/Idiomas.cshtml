@model  IEnumerable<SINU.Models.vPersona_Idioma>

@*@{
    ViewBag.Title = "Idiomas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@


<h2>Idiomas</h2>

<div class="form-group" id="divTABLE">

    <table id="TablaIdioma" data-CUD="IdiomaCUD" data-URL="Idiomas" data-ELI="EliminaIDIO" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th hidden>IdPersonaIdioma</th>
                <th hidden>idPersona</th>
                <th>@Html.DisplayNameFor(m => m.Idioma)</th>
                <th>@Html.DisplayNameFor(m => m.NivelHabla)</th>
                <th class="oculto">@Html.DisplayNameFor(m => m.NivelEscribe)</th>
                <th class="oculto">@Html.DisplayNameFor(m => m.NivelLee)</th>
                <th>
                    @Html.Label("Opciones")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td hidden>@Html.DisplayFor(modelItem => item.IdPersonaIdioma)</td>
                <td hidden>@Html.DisplayFor(modelItem => item.IdPersona)</td>
                <td>@Html.DisplayFor(modelItem => item.Idioma)</td>
                <td>@Html.DisplayFor(modelItem => item.NivelHabla)</td>
                <td class="oculto">@Html.DisplayFor(modelItem => item.NivelEscribe)</td>
                <td class="oculto">@Html.DisplayFor(modelItem => item.NivelLee)</td>
                <td class="row justify-content-center align-items-center">
                    <div class="BTMuestraTable">
                        <button class="Agrega btn btn-success fas fa-edit" data-ID="@item.IdPersonaIdioma"></button>
                    </div>
                    <div class="BTAcciones d-inline">
                         &ensp; |&ensp;
                         @Ajax.ActionLink(" ", "EliminaIDIO", new { ID = item.IdPersonaIdioma }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "Exito(data,status,xhr)", OnFailure = "Falla", }, new { @id = "EliminaIDIO", @class = "btn btn-danger fas fa-trash-alt" })
                    </div>
                </td>

            </tr>
            }
        </tbody>

    </table>
    <div class="BTAcciones">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary Nuevo_REG" data-toggle="modal" data-target="#ModalEIA" id="Nuevo_REG" data-IdTabla="TablaIdioma">
            Agregar
        </button>
    </div>

</div>

